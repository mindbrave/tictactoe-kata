{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noEmitOnError": true,
        "sourceMap": true,
        "outDir": "build/",
        "moduleResolution": "node",
        "target": "es5",
        "lib": ["es6"],
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/tests/*"
    ]
}